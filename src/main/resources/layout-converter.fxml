<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>

<VBox prefHeight="400.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="gui.ConverterController" fx:id="controllerVBox">
    <MenuBar prefWidth="640">
        <Menu text="File">
            <MenuItem text="Exit" onAction="#exitApplication"/>
        </Menu>
        <Menu text="Mode">
            <CheckMenuItem text="Calculator" fx:id="calculatorMenuItem"
                           onAction="#openCalculatorScene"/>
            <CheckMenuItem text="Converter" fx:id="converterMenuItem" selected="true"/>
        </Menu>
        <Menu text="Help">
            <MenuItem text="About calculator"/>
        </Menu>
    </MenuBar>
    <HBox prefHeight="40" prefWidth="640">
        <TextField fx:id="calculatorScreen" id="calculatorScreen" prefHeight="40" prefWidth="320"/>
        <Label fx:id="answerScreen" id="answerScreen" prefHeight="40" prefWidth="320" text="ANS"/>
    </HBox>
    <GridPane id="buttonGrid" alignment="CENTER" nodeOrientation="LEFT_TO_RIGHT" VBox.vgrow="ALWAYS">
        <columnConstraints>
            <ColumnConstraints minWidth="10.0" prefWidth="100.0" hgrow="SOMETIMES"/>
            <ColumnConstraints minWidth="10.0" prefWidth="100.0" hgrow="SOMETIMES"/>
            <ColumnConstraints minWidth="10.0" prefWidth="100.0" hgrow="SOMETIMES"/>
            <ColumnConstraints minWidth="10.0" prefWidth="100.0" hgrow="SOMETIMES"/>
            <ColumnConstraints minWidth="10.0" prefWidth="100.0" hgrow="SOMETIMES"/>
            <ColumnConstraints minWidth="10.0" prefWidth="100.0" hgrow="SOMETIMES"/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        </rowConstraints>
        <ComboBox fx:id="unitComboBox" GridPane.columnIndex="1" GridPane.rowIndex="0" promptText="unit type"
                  onAction="#unitChoice"/>
        <ComboBox fx:id="fromComboBox" GridPane.columnIndex="3" GridPane.rowIndex="0" promptText="from unit"/>
        <ComboBox fx:id="toComboBox" GridPane.columnIndex="5" GridPane.rowIndex="0" promptText="to unit"/>
        <Button text="=" GridPane.columnIndex="3" GridPane.rowIndex="5" GridPane.halignment="CENTER"/>
    </GridPane>
    <stylesheets>
        <URL value="@style.css"/>
    </stylesheets>
</VBox>
