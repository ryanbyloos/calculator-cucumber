<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import java.net.URL?>
<VBox prefHeight="400.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="gui.Controller">
    <children>
        <MenuBar VBox.vgrow="NEVER">
            <menus>
                <Menu text="File">
                    <items>
                        <MenuItem text="Clear"/>
                        <MenuItem text="Quit"/>
                    </items>
                </Menu>
                <Menu text="Help">
                    <items>
                        <MenuItem text="About calculator"/>
                    </items>
                </Menu>
            </menus>
        </MenuBar>
        <Label fx:id="calculatorScreen" id="calculatorScreen" alignment="CENTER_RIGHT" contentDisplay="CENTER"
               prefHeight="40.0" prefWidth="640.0" text=""/>
        <GridPane id="buttongrid" alignment="CENTER" nodeOrientation="LEFT_TO_RIGHT" VBox.vgrow="ALWAYS">
            <columnConstraints>
                <ColumnConstraints minWidth="10.0" prefWidth="100.0" hgrow="SOMETIMES"/>
                <ColumnConstraints minWidth="10.0" prefWidth="100.0" hgrow="SOMETIMES"/>
                <ColumnConstraints minWidth="10.0" prefWidth="100.0" hgrow="SOMETIMES"/>
                <ColumnConstraints minWidth="10.0" prefWidth="100.0" hgrow="SOMETIMES"/>
                <ColumnConstraints minWidth="10.0" prefWidth="100.0" hgrow="SOMETIMES"/>
                <ColumnConstraints minWidth="10.0" prefWidth="100.0" hgrow="SOMETIMES"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <Button text="Button" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.halignment="CENTER"/>
                <Button text="Button" GridPane.columnIndex="1" GridPane.rowIndex="0" GridPane.halignment="CENTER"/>
                <Button text="Button" GridPane.columnIndex="2" GridPane.rowIndex="0" GridPane.halignment="CENTER"/>
                <Button text="Button" GridPane.columnIndex="3" GridPane.rowIndex="0" GridPane.halignment="CENTER"/>
                <Button text="Button" GridPane.columnIndex="4" GridPane.rowIndex="0" GridPane.halignment="CENTER"/>
                <Button text="Button" GridPane.columnIndex="5" GridPane.rowIndex="0" GridPane.halignment="CENTER"/>
                <Button text="Button" GridPane.columnIndex="0" GridPane.rowIndex="1" GridPane.halignment="CENTER"/>
                <Button text="Button" GridPane.columnIndex="1" GridPane.rowIndex="1" GridPane.halignment="CENTER"/>
                <Button text="Button" GridPane.columnIndex="2" GridPane.rowIndex="1" GridPane.halignment="CENTER"/>
                <Button text="Button" GridPane.columnIndex="3" GridPane.rowIndex="1" GridPane.halignment="CENTER"/>
                <Button text="Button" GridPane.columnIndex="4" GridPane.rowIndex="1" GridPane.halignment="CENTER"/>
                <Button text="Button" GridPane.columnIndex="5" GridPane.rowIndex="1" GridPane.halignment="CENTER"/>
                <Button text="Button" GridPane.columnIndex="0" GridPane.rowIndex="2" GridPane.halignment="CENTER"/>
                <Button text="Button" GridPane.columnIndex="1" GridPane.rowIndex="2" GridPane.halignment="CENTER"/>
                <Button text="Button" GridPane.columnIndex="2" GridPane.rowIndex="2" GridPane.halignment="CENTER"/>
                <Button text="Button" GridPane.columnIndex="3" GridPane.rowIndex="2" GridPane.halignment="CENTER"/>
                <Button text="Button" GridPane.columnIndex="4" GridPane.rowIndex="2" GridPane.halignment="CENTER"/>
                <Button text="Button" GridPane.columnIndex="5" GridPane.rowIndex="2" GridPane.halignment="CENTER"/>
                <Button text="CE"     GridPane.columnIndex="0" GridPane.rowIndex="3" GridPane.halignment="CENTER"/>
                <Button text="C"      GridPane.columnIndex="1" GridPane.rowIndex="3" GridPane.halignment="CENTER"/>
                <Button text="DEL"    GridPane.columnIndex="2" GridPane.rowIndex="3" GridPane.halignment="CENTER"/>
                <Button text="/"      GridPane.columnIndex="3" GridPane.rowIndex="3" GridPane.halignment="CENTER"/>
                <Button text="Button" GridPane.columnIndex="4" GridPane.rowIndex="3" GridPane.halignment="CENTER"/>
                <Button text="Button" GridPane.columnIndex="5" GridPane.rowIndex="3" GridPane.halignment="CENTER"/>
                <Button text="1"      GridPane.columnIndex="0" GridPane.rowIndex="4" GridPane.halignment="CENTER" onAction="#numberButtonClicked"/>
                <Button text="2"      GridPane.columnIndex="1" GridPane.rowIndex="4" GridPane.halignment="CENTER" onAction="#numberButtonClicked"/>
                <Button text="3"      GridPane.columnIndex="2" GridPane.rowIndex="4" GridPane.halignment="CENTER" onAction="#numberButtonClicked"/>
                <Button text="*"      GridPane.columnIndex="3" GridPane.rowIndex="4" GridPane.halignment="CENTER"/>
                <Button text="Button" GridPane.columnIndex="4" GridPane.rowIndex="4" GridPane.halignment="CENTER"/>
                <Button text="Button" GridPane.columnIndex="5" GridPane.rowIndex="4" GridPane.halignment="CENTER"/>
                <Button text="4"      GridPane.columnIndex="0" GridPane.rowIndex="5" GridPane.halignment="CENTER" onAction="#numberButtonClicked"/>
                <Button text="5"      GridPane.columnIndex="1" GridPane.rowIndex="5" GridPane.halignment="CENTER" onAction="#numberButtonClicked"/>
                <Button text="6"      GridPane.columnIndex="2" GridPane.rowIndex="5" GridPane.halignment="CENTER" onAction="#numberButtonClicked"/>
                <Button text="-"      GridPane.columnIndex="3" GridPane.rowIndex="5" GridPane.halignment="CENTER"/>
                <Button text="Button" GridPane.columnIndex="4" GridPane.rowIndex="5" GridPane.halignment="CENTER"/>
                <Button text="Button" GridPane.columnIndex="5" GridPane.rowIndex="5" GridPane.halignment="CENTER"/>
                <Button text="7"      GridPane.columnIndex="0" GridPane.rowIndex="6" GridPane.halignment="CENTER" onAction="#numberButtonClicked"/>
                <Button text="8"      GridPane.columnIndex="1" GridPane.rowIndex="6" GridPane.halignment="CENTER" onAction="#numberButtonClicked"/>
                <Button text="9"      GridPane.columnIndex="2" GridPane.rowIndex="6" GridPane.halignment="CENTER" onAction="#numberButtonClicked"/>
                <Button text="+"      GridPane.columnIndex="3" GridPane.rowIndex="6" GridPane.halignment="CENTER"/>
                <Button text="Button" GridPane.columnIndex="4" GridPane.rowIndex="6" GridPane.halignment="CENTER"/>
                <Button text="Button" GridPane.columnIndex="5" GridPane.rowIndex="6" GridPane.halignment="CENTER"/>
                <Button text="0"      GridPane.columnIndex="0" GridPane.rowIndex="7" GridPane.halignment="CENTER" onAction="#numberButtonClicked"/>
                <Button text="Button" GridPane.columnIndex="1" GridPane.rowIndex="7" GridPane.halignment="CENTER"/>
                <Button text="Button" GridPane.columnIndex="2" GridPane.rowIndex="7" GridPane.halignment="CENTER"/>
                <Button text="="      GridPane.columnIndex="3" GridPane.rowIndex="7" GridPane.halignment="CENTER"/>
                <Button text="Button" GridPane.columnIndex="4" GridPane.rowIndex="7" GridPane.halignment="CENTER"/>
                <Button text="Button" GridPane.columnIndex="5" GridPane.rowIndex="7" GridPane.halignment="CENTER"/>
            </children>
        </GridPane>
    </children>
    <stylesheets>
        <URL value="@style.css"/>
    </stylesheets>
</VBox>
